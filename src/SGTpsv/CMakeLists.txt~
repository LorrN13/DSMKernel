add_library(sgtPSVlib
		calmat.f90
		dcsymbdl.f90
		dcsymbdl3.f90
		glu2.f90
		modules.f90
		others.f90
		rk3.f90
		trial.f90
	)

target_compile_options(sgtPSVlib PUBLIC ${DKS_options})
add_executable(xSGTpsv SGTpsv-MPI.f90)
target_link_libraries(xSGTpsv sgtPSVlib)
target_compile_options(xSGTpsv ${DKS_options})

